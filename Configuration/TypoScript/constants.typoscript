
module.tx_matomoreporter_dashboard {
    view {
        # cat=module.tx_matomoreporter_dashboard/file; type=string; label=Path to template root (BE)
        templateRootPath = EXT:matomo_reporter/Resources/Private/Backend/Templates/
        # cat=module.tx_matomoreporter_dashboard/file; type=string; label=Path to template partials (BE)
        partialRootPath = EXT:matomo_reporter/Resources/Private/Backend/Partials/
        # cat=module.tx_matomoreporter_dashboard/file; type=string; label=Path to template layouts (BE)
        layoutRootPath = EXT:matomo_reporter/Resources/Private/Backend/Layouts/
    }

    #Storage Page UID
    persistence {
        # cat=module.tx_matomoreporter_dashboard//a; type=string; label=Default storage PID
        storagePid = 7
    }

    #Mail paths
    $GLOBALS['TYPO3_CONF_VARS']['MAIL']['templateRootPaths'][700] = 'EXT:matomo_reporter/Resources/Private/Templates/Email';
    $GLOBALS['TYPO3_CONF_VARS']['MAIL']['layoutRootPaths'][700] = 'EXT:matomo_reporter/Resources/Private/Layouts';
}
